<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_height="match_parent"
    android:layout_width="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView android:id="@+id/tv22position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="000"
        />


    <EditText
        android:id="@+id/et22id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="DbPet id"
        android:inputType="textPersonName"
        android:visibility="gone" />

    <EditText
        android:id="@+id/et22idCloud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="DbPet idCloud"
        android:inputType="textPersonName"
        android:visibility="gone" />
    <EditText android:id="@+id/et22idUser" android:layout_width="match_parent" android:layout_height="wrap_content"  android:ems="10" android:hint="DbPet idUser" android:inputType="textPersonName" />
    <EditText android:id="@+id/et22name" android:layout_width="match_parent" android:layout_height="wrap_content"  android:ems="10" android:hint="DbPet name" android:inputType="textPersonName" />
    <EditText android:id="@+id/et22race" android:layout_width="match_parent" android:layout_height="wrap_content"  android:ems="10" android:hint="DbPet race" android:inputType="textPersonName" />
    <EditText android:id="@+id/et22gender" android:layout_width="match_parent" android:layout_height="wrap_content"  android:ems="10" android:hint="DbPet gender" android:inputType="textPersonName" />
    <EditText android:id="@+id/et22age" android:layout_width="match_parent" android:layout_height="wrap_content"  android:ems="10" android:hint="DbPet age" android:inputType="textPersonName" />
    <EditText android:id="@+id/et22color" android:layout_width="match_parent" android:layout_height="wrap_content"  android:ems="10" android:hint="DbPet color" android:inputType="textPersonName" />
    <EditText android:id="@+id/et22qrCode" android:layout_width="match_parent" android:layout_height="wrap_content"  android:ems="10" android:hint="DbPet qrCode" android:inputType="textPersonName" />


    <Button
        android:id="@+id/btnUpdate"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="UpdateAndFinish"
        android:text="Update" />

    <Button
        android:id="@+id/btnDelete"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="DeleteAndFinish"
        android:text="Delete" />


</LinearLayout>

</ScrollView>